---
interface Props {
    title: string;
    date: Date;
    summary: string;
    url: string;
    author?: string;
    source?: string;
}

const { title, date, summary, url, author, source } = Astro.props;

// Format date to a more human-readable format
const formattedDate = new Intl.DateTimeFormat('es-UY', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
}).format(date);
---

<article class="card">
    <div class="card-content">
        <h2 class="card-title"><a href={url}>{title}</a></h2>
        <time datetime={date.toISOString()}>{formattedDate}</time>
        
        {author && (
            <div class="card-meta">
                <span class="author">Por: {author}</span>
                {source && <span class="source">Fuente: {source}</span>}
            </div>
        )}
        
        <p class="summary">{summary}</p>
        <a href={url} class="read-more">Leer m√°s &rarr;</a>
    </div>
</article>

<style>
    .card {
        border-bottom: 1px solid #eee;
        padding: 1.5rem 0;
    }

    .card:last-child {
        border-bottom: none;
    }

    .card-title {
        margin-top: 0;
        margin-bottom: 0.5rem;
        font-size: 1.5rem;
    }

    .card-title a {
        color: var(--color-text);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .card-title a:hover {
        color: var(--color-accent);
    }

    time {
        display: block;
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 0.75rem;
    }

    .card-meta {
        margin: 0.5rem 0;
        font-size: 0.9rem;
        color: #666;
    }

    .author, .source {
        display: inline-block;
    }

    .source {
        margin-left: 1rem;
    }

    .summary {
        margin: 0.75rem 0;
        line-height: 1.6;
    }

    .read-more {
        display: inline-block;
        font-weight: 600;
        font-size: 0.9rem;
        margin-top: 0.5rem;
    }

    @media (max-width: 768px) {
        .card-title {
            font-size: 1.25rem;
        }
    }
</style>