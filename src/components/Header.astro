        <div class="logo">
            <a href="/">
                <img src="/logo.svg" alt="Archivo Mujica" width="50" height="50" />
                <h1>Archivo Mujica</h1>
            </a>
        </div>
        <nav>
            <ul>
                <li><a href="/discursos">Discursos</a></li>
