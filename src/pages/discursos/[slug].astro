---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Obtener todos los discursos para generar las páginas
export async function getStaticPaths() {
    const discursos = await getCollection('discursos');
    return discursos.map(discurso => ({
        params: { slug: discurso.slug },
        props: { discurso },
    }));
}

// Extraer la entrada de la colección y renderizar su contenido
const { discurso } = Astro.props;
const { Content } = await discurso.render();

// Formatear la fecha para mostrar
const formattedDate = new Intl.DateTimeFormat('es-UY', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
}).format(discurso.data.fecha);
---

<Layout 
    title={discurso.data.titulo} 
    description={discurso.data.resumen}
>
    <article class="content discurso">
        <div class="metadata">
            <time datetime={discurso.data.fecha.toISOString()}>{formattedDate}</time>
        </div>
        
        <div class="discurso-content">
            <Content />
        </div>
        
        <div class="back-link">
            <a href="/discursos">&larr; Volver a discursos</a>
        </div>
    </article>
</Layout>

<style>
    .discurso {
        max-width: var(--content-width);
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    .metadata {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }
    
    .discurso-content {
        font-family: var(--font-body);
        line-height: 1.8;
    }
    
    .discurso-content h1 {
        font-size: 2.25rem;
        margin-bottom: 1rem;
    }
    
    .discurso-content h2 {
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }
    
    .discurso-content h3 {
        font-size: 1.25rem;
        margin: 1.5rem 0 1rem;
    }
    
    .discurso-content p {
        margin-bottom: 1.5rem;
    }

    .discurso-content blockquote {
        margin: 1.5rem 0;
        padding: 0.5rem 1rem;
        border-left: 4px solid var(--color-accent);
        font-style: italic;
        color: #555;
    }
    
    .back-link {
        margin-top: 3rem;
        padding-top: 1rem;
        border-top: 1px solid #eee;
    }
    
    .back-link a {
        display: inline-block;
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .discurso-content h1 {
            font-size: 1.75rem;
        }
        
        .discurso-content h2 {
            font-size: 1.35rem;
        }
        
        .discurso-content h3 {
            font-size: 1.15rem;
        }
    }
</style>