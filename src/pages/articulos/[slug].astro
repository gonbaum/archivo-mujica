---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Obtener todos los artículos para generar las páginas
export async function getStaticPaths() {
    const articulos = await getCollection('articulos');
    return articulos.map(articulo => ({
        params: { slug: articulo.slug },
        props: { articulo },
    }));
}

// Extraer la entrada de la colección y renderizar su contenido
const { articulo } = Astro.props;
const { Content } = await articulo.render();

// Formatear la fecha para mostrar
const formattedDate = new Intl.DateTimeFormat('es-UY', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
}).format(articulo.data.fecha);
---

<Layout 
    title={articulo.data.titulo} 
    description={articulo.data.resumen}
>
    <article class="content articulo">
        <div class="metadata">
            <time datetime={articulo.data.fecha.toISOString()}>{formattedDate}</time>
            <div class="source-info">
                {articulo.data.autor && <span class="autor">Por: {articulo.data.autor}</span>}
                {articulo.data.fuente && <span class="fuente">Fuente: {articulo.data.fuente}</span>}
            </div>
        </div>
        
        <div class="articulo-content">
            <Content />
        </div>
        
        <div class="back-link">
            <a href="/articulos">&larr; Volver a artículos</a>
        </div>
    </article>
</Layout>

<style>
    .articulo {
        max-width: var(--content-width);
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    .metadata {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }
    
    .source-info {
        margin-top: 0.5rem;
    }
    
    .autor, .fuente {
        display: inline-block;
        font-weight: 600;
        margin-right: 1rem;
    }
    
    .articulo-content {
        font-family: var(--font-body);
        line-height: 1.8;
    }
    
    .articulo-content h1 {
        font-size: 2.25rem;
        margin-bottom: 1rem;
    }
    
    .articulo-content h2 {
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }
    
    .articulo-content h3 {
        font-size: 1.25rem;
        margin: 1.5rem 0 1rem;
    }
    
    .articulo-content p {
        margin-bottom: 1.5rem;
    }

    .articulo-content blockquote {
        margin: 1.5rem 0;
        padding: 0.5rem 1rem;
        border-left: 4px solid var(--color-accent);
        font-style: italic;
        color: #555;
    }
    
    .back-link {
        margin-top: 3rem;
        padding-top: 1rem;
        border-top: 1px solid #eee;
    }
    
    .back-link a {
        display: inline-block;
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .articulo-content h1 {
            font-size: 1.75rem;
        }
        
        .articulo-content h2 {
            font-size: 1.35rem;
        }
        
        .articulo-content h3 {
            font-size: 1.15rem;
        }
    }
</style>