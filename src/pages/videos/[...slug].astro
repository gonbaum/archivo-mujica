---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Obtener todos los videos para generar las p치ginas
export async function getStaticPaths() {
  const videos = await getCollection('videos');
  return videos.map(video => ({
    params: { slug: video.slug },
    props: { video },
  }));
}

// Extraer la entrada de la colecci칩n
const { video } = Astro.props;
const { Content } = await video.render();

// Formatear la fecha
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('es-UY', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};
---

<Layout 
  title={video.data.titulo}
  description={video.data.descripcion || `Video: ${video.data.titulo} - ${video.data.canal}`}
>
  <article class="video-detail">
    <div class="video-container">
      <div class="video-embed">
        <iframe
          width="100%"
          height="500"
          src={video.data.embedUrl}
          title={video.data.titulo}
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
      
      <div class="video-info">
        <h1 class="video-title">{video.data.titulo}</h1>
        
        <div class="video-meta">
          <div class="meta-item">
            <span class="meta-label">Publicado por:</span>
            <span class="meta-value">{video.data.canal}</span>
          </div>
          
          <div class="meta-item">
            <span class="meta-label">Fecha:</span>
            <span class="meta-value">{formatDate(video.data.fecha)}</span>
          </div>
          
          {video.data.duracion && (
            <div class="meta-item">
              <span class="meta-label">Duraci칩n:</span>
              <span class="meta-value">{video.data.duracion}</span>
            </div>
          )}
          
          <div class="meta-item">
            <span class="meta-label">Fuente:</span>
            <a href={video.data.url} target="_blank" rel="noopener noreferrer" class="meta-link">
              Ver en {video.data.fuente}
            </a>
          </div>
        </div>
        
        {video.data.descripcion && (
          <div class="video-description">
            <h2>Descripci칩n</h2>
            <p>{video.data.descripcion}</p>
          </div>
        )}
        
        <div class="video-content">
          <Content />
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .video-detail {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }
  
  .video-container {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .video-embed {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
  }
  
  .video-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
  
  .video-info {
    padding: 2rem;
  }
  
  .video-title {
    font-size: 1.75rem;
    margin: 0 0 1.5rem;
    color: var(--color-text);
    line-height: 1.3;
  }
  
  .video-meta {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #eee;
  }
  
  .meta-item {
    margin-bottom: 0.5rem;
  }
  
  .meta-label {
    display: block;
    font-size: 0.85rem;
    color: #6b7280;
    margin-bottom: 0.25rem;
  }
  
  .meta-value {
    font-weight: 500;
    color: var(--color-text);
  }
  
  .meta-link {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .meta-link:hover {
    color: var(--color-primary-dark);
    text-decoration: underline;
  }
  
  .video-description {
    margin-bottom: 2rem;
  }
  
  .video-description h2 {
    font-size: 1.25rem;
    margin: 0 0 1rem;
    color: var(--color-text);
  }
  
  .video-description p {
    margin: 0;
    line-height: 1.6;
    color: #4b5563;
  }
  
  .video-content {
    line-height: 1.7;
  }
  
  .video-content h2 {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
    color: var(--color-text);
  }
  
  .video-content p {
    margin-bottom: 1.25rem;
    color: #4b5563;
  }
  
  @media (max-width: 768px) {
    .video-detail {
      padding: 1rem 1rem 3rem;
    }
    
    .video-info {
      padding: 1.5rem;
    }
    
    .video-title {
      font-size: 1.5rem;
    }
    
    .video-meta {
      grid-template-columns: 1fr;
    }
  }
</style>
